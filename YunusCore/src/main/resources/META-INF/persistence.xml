<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="ReservasUnit" transaction-type="RESOURCE_LOCAL">
		<properties>
		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"></property>
        <property name="hibernate.connection.password" value="mysqlroot" ></property>
        <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/partidas"></property>
        <property name="hibernate.connection.username" value="root"></property>
		<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>